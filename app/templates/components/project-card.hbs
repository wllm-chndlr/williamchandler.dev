<div class="project-card" ...attributes>
    <img
        class="lazy project-image"
        src={{this.project.image}}
        alt=""
        {{!-- data-src={{this.project.image}} --}}
    >
    <div class="project-info">
        <div>
            <div
                class="project-title"
            >
                {{this.project.title}}
            </div>
            <p
                class="project-desc"
            >
                {{this.project.description}}
            </p>
        </div>
        <div class="button-container">
            <button
                class="primary-button card-button"
            >
                <a
                    class="button-link"
                    target="_blank"
                    rel="noopener"
                    href={{this.project.url}}
                >
                    Explore
                </a>
            </button>
            <button
                class="primary-button card-button"
            >
                <a
                    class="button-link"
                    target="_blank"
                    rel="noopener"
                    href={{this.project.github}}
                >
                    Github repo
                </a>
            </button>
        </div>
    </div>
</div>
